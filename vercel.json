{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "backend/src/index.ts"
    },
    {
      "src": "^/vip/north-shore-back-end/(.*)$",
      "dest": "backend/src/index.ts"
    },
    {
      "src": "^/(.*)$",
      "dest": "frontend/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/src/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}
