{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "demo-live.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/demo-live$",
      "dest": "demo-live.html"
    },
    {
      "src": "^/api/(.*)$",
      "dest": "backend/src/index.ts"
    },
    {
      "src": "^/vip/north-shore-back-end/(.*)$",
      "dest": "backend/src/index.ts"
    },
    {
      "src": "^/(.*)$",
      "dest": "frontend/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
